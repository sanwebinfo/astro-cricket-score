---
import Config from '../config.cjs';
import Layout from '../layouts/index.astro';

export interface Props {
    title: string;
    description: string;
}

const title = '404 Not Found';
const description = "Live Cricket Score Updates for Every 5 to 10 Minutes.";

---

<Layout title={title} {description}>
  <div class="d-flex flex-column justify-content-center bg-skew bg-skew-light overflow-hidden">
    <div class="container">
      <div class="row justify-content-lg-center text-center">
        <div class="col-lg-8">
            <h1 class="display-4 mb-5 mt-5">{title}</h1>
            <p class="lead mb-5">The page you are looking for does not exist.</p>
            <a href={Config.siteBaseUrl} class="btn btn-primary rounded-pill">Go to home page</a>
        </div>
      </div>
    </div>
  </div>
</Layout>
